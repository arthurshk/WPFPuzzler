<Window x:Class="puzzler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Picture Puzzle" Height="600" Width="800"
        AllowDrop="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Content="Upload Picture" Click="UploadPicture_Click" Margin="10" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Canvas Name="PuzzleArea" Background="LightGray" Grid.Column="0" AllowDrop="True" Drop="PuzzleArea_Drop"/>
            <WrapPanel Name="PiecesPanel" Grid.Column="1" Background="LightBlue"/>
        </Grid>
    </Grid>
</Window>
